<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wallet_layout"
    tools:context=".activities.WalletActivity">

    <ImageView
        android:id="@+id/img_wallet"
        android:layout_marginTop="6dp"
        android:src="@drawable/wallet_vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_wallet_container"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@drawable/home_dash_back"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/img_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_wallet"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            app:layout_constraintEnd_toStartOf="@id/text_main_wallet"
            android:id="@+id/tv_main_wallet"
            android:text="₹ 00.0"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_main_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/img_refresh"
            android:textStyle="bold"
            android:id="@+id/text_main_wallet"
            android:text="Main\nWallet"
            android:textColor="@color/purple_500"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_main_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="4dp"
            android:src="@drawable/refresh"
            android:layout_marginEnd="10dp"
            android:id="@+id/img_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aeps_wallet_container"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@drawable/home_dash_back"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/main_wallet_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_aeps_wallet"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            app:layout_constraintEnd_toStartOf="@id/text_aeps_wallet"
            android:id="@+id/tv_aeps_wallet"
            android:text="₹ 00.0"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_aeps_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/img_aeps_refresh"
            android:textStyle="bold"
            android:id="@+id/text_aeps_wallet"
            android:text="AEPS\nWallet"
            android:textColor="@color/purple_500"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_aeps_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="4dp"
            android:src="@drawable/refresh"
            android:layout_marginEnd="10dp"
            android:id="@+id/img_aeps_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commission_wallet_container"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@drawable/home_dash_back"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/aeps_wallet_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_commission_wallet"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            app:layout_constraintEnd_toStartOf="@id/text_Commission_wallet"
            android:id="@+id/tv_commission_wallet"
            android:text="₹ 00.0"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_commission_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/img_c_refresh"
            android:textStyle="bold"
            android:id="@+id/text_Commission_wallet"
            android:text="Comm\nWallet"
            android:textColor="@color/purple_500"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_commission_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="4dp"
            android:src="@drawable/refresh"
            android:layout_marginEnd="10dp"
            android:id="@+id/img_c_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>