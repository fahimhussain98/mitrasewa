<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/home_dash_back"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/logo"
        android:id="@+id/img_qr_code"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:padding="4dp"
        android:background="@drawable/home_dash_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@drawable/submit_down" />

    <TextView
        android:gravity="center"
        android:text="If you have done transaction then submit."
        android:fontFamily="@font/codec_pro_bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/button_back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>