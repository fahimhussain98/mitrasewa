<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_dash_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_close"
        android:src="@drawable/failure_icon"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/img_oops"
        android:src="@drawable/oops"
        app:layout_constraintTop_toBottomOf="@id/img_close"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tv_message"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/codec_pro_bold"
        android:text="Hey!!! You forgot to select something."
        android:textColor="@color/purple_700"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_oops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_try_again"
        android:textSize="16sp"
        android:text="Lets Try Again"
        android:fontFamily="@font/codec_pro_bold"
        android:textColor="@color/white"
        android:background="@drawable/button_bg_two"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>