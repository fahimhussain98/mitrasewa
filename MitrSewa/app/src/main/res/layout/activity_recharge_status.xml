<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RechargeStatusActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tv_recharge_status"
        android:textSize="20sp"
        android:text="SUCCESS"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_amount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:text="â‚¹ 399"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recharge_status"
        app:layout_constraintEnd_toEndOf="@id/tv_recharge_status"
        app:layout_constraintStart_toStartOf="@id/tv_recharge_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_status"
        android:src="@drawable/successicon"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_amount"
        app:layout_constraintTop_toTopOf="@id/tv_amount"
        app:layout_constraintStart_toEndOf="@id/tv_amount"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/tv_transaction_id"
        android:text="Txn ID : BHJGYDJKBUDB65545151"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_mobile_number"
        android:text="Number : 8527365890"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_date"
        android:text="Date : 20 Aug 2020"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mobile_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:text="Time : 03:37 AM"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_operator_name"
        android:text="Operator : Airtel"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Done"
        android:background="@drawable/button_back3"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_operator_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>