<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="4dp"
    android:background="@drawable/bordered_back"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_bank_rrn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Bank RRN"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_amount"
        android:layout_marginStart="10dp"
        android:text="Amount"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_status"
        android:layout_marginStart="10dp"
        android:text="Status"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_marginStart="10dp"
        android:text="Date"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_opening_balance"
        android:layout_marginStart="10dp"
        android:text="Opening Balance"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_closing_balance"
        android:layout_marginStart="10dp"
        android:text="Closing Balance"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_check_status"
        android:paddingHorizontal="20dp"
        android:text="Check Status"
        android:textColor="@color/white"
        android:background="@drawable/button_back"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>