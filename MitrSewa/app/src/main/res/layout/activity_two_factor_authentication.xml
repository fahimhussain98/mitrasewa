<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TwoFactorAuthenticationActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/recharge_back"
            android:fontFamily="@font/codec_pro_bold"
            android:gravity="center"
            android:text="Authentication"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/home_dash_back"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/codec_pro_bold"
                        android:text="Aadhar Enable Payment System"
                        android:textColor="#250AEA"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/aeps_img" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_aeps_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/codec_pro_bold"
                                android:text="â‚¹ 00.00"
                                android:textColor="#11085B"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Balance"
                                android:textColor="#280EE8"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <!--USER DETAIL LAYOUT 2nd LAYOUT-->
                <LinearLayout

                    android:id="@+id/user_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Please fill up your Aadhar Details"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/codec_pro_bold"
                        android:text="Make sure your aadhar is linked with bank account" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/codec_pro_bold"
                        android:text="Welcome !"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Mobile Number"
                        android:textColorHint="@color/gray"
                        app:boxStrokeColor="@color/gray">

                        <EditText
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Aadhar Number"
                        android:textColorHint="@color/gray"
                        app:boxStrokeColor="@color/gray">

                        <EditText
                            android:id="@+id/et_aadhar_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="12"
                            android:singleLine="true"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>





                    <CheckBox
                        android:checked="true"
                        android:id="@+id/ckb_terms_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:text="Terms &amp; Condition*"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="Before you proceed please carefully read" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="Terms &amp; Condition"
                        android:textColor="#005E96" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_proceed_user_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_back3"
                        android:fontFamily="@font/codec_pro_bold"
                        android:text="Proceed"
                        android:textColor="@color/white"


                        android:textSize="16sp" />

                </LinearLayout>
                <!--USER DETAIL LAYOUT 2nd LAYOUT-->

                <!--DEVICE LAYOUT 3RD LAYOUT-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CHOOSE DEVICE"
                        android:textColor="@color/purple_700" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/morpho_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_morpho"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/morpho_unselected" />

                            <TextView
                                android:id="@+id/tv_morpho"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Morpho"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/morphoL1_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_morphoL1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/morpho_unselected" />

                            <TextView
                                android:id="@+id/tv_morphoL1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Morpho L1"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/startek_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_startek"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/startek_unselected" />

                            <TextView
                                android:id="@+id/tv_startek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Startek"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mantra_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_mantra"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/mantra_unselected" />

                            <TextView
                                android:id="@+id/tv_mantra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Mantra"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mantra_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_mantra2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/mantral1_unselected" />

                            <TextView
                                android:id="@+id/tv_mantra2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Mantra L1"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/evolute_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:id="@+id/img_evolute"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/evolute_unselected" />

                            <TextView
                                android:id="@+id/tv_evolute"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/codec_pro_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Evolute"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vriddhi_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:background="@drawable/home_dash_back"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <ImageView
                                android:id="@+id/img_vriddhi"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/vriddhi_unselected" />

                            <TextView
                                android:id="@+id/tv_vriddhi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_back"
                                android:fontFamily="@font/arial_bold"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:text="Vriddhi"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_proceed_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_back3"
                        android:fontFamily="@font/codec_pro_bold"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/safe" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Your data safe with us!"
                            android:textColor="#14095C" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="We never store your Aadhar number in any form neither we share aadhar or account related details to anyone. Under RBI guidelines BC we are permitted to capture your aadhar number to complete your banking transaction through AEPS bridge" />

                </LinearLayout>
                <!--DEVICE LAYOUT 3RD LAYOUT-->
            </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>