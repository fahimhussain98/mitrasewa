<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fingpayKyc.FingPayUserBioMetricActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/device_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CHOOSE DEVICE"
            android:textColor="@color/purple_700" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/morpho_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/home_dash_back"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_morpho"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/morpho_unselected" />

                <TextView
                    android:id="@+id/tv_morpho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_back"
                    android:fontFamily="@font/codec_pro_bold"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Morpho"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/morphoL1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/home_dash_back"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_morphoL1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/morpho_unselected" />

                <TextView
                    android:id="@+id/tv_morphoL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_back"
                    android:fontFamily="@font/codec_pro_bold"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Morpho L1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/startek_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/home_dash_back"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_startek"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/startek_unselected" />

                <TextView
                    android:id="@+id/tv_startek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_back"
                    android:fontFamily="@font/codec_pro_bold"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Startek"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mantra_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/home_dash_back"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_mantra"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mantra_unselected" />

                <TextView
                    android:id="@+id/tv_mantra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_back"
                    android:fontFamily="@font/codec_pro_bold"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Mantra"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mantra_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/home_dash_back"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/img_mantra2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mantral1_unselected" />

                <TextView
                    android:id="@+id/tv_mantra2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_back"
                    android:fontFamily="@font/codec_pro_bold"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Mantra L1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_proceed_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_bg_two"
            android:fontFamily="@font/codec_pro_bold"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/safe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Your data safe with us!"
                android:textColor="#14095C" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:text="We never store your Aadhar number in any form neither we share aadhar or account related details to anyone. Under RBI guidelines BC we are permitted to capture your aadhar number to complete your banking transaction through AEPS bridge" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>